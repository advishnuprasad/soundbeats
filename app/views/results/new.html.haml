= form_for(@result , :html => { :class => "form-horizontal"}) do |f|
  %fieldset
    %legend 
      New Student Entry
    .control-group
      %label.control-label{:for => "Name"} Roll No
      .controls
        = f.text_field :student_id
    .control-group
      %label.control-label{:for => "Name"} Subject
      .controls
        = f.select(:subject, options_for_select([['Tamil','Tamil'],['English','English'],['Science','Science'],['Maths','Maths'],['Social','Social'] ]) , :class => 'input-medium')
    .control-group
      %label.control-label{:for => "Name"} Grade
      .controls
        = f.select(:grade, options_for_select([['A','A'],['B','B'],['C','C'],['D','D'],['E','E'],['F','F'] ]) , :class => 'input-medium')
    .controls
      = f.submit 'Create' , :class => [:btn, :'btn-primary']
